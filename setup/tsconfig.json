{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "lib": ["es2019"],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "src",
        "strict": false,
        "removeComments": true,
        "allowJs": true
    },
    "include": [
        "./src/**/*"
    ]
}
